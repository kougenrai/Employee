<Window x:Class="LogoWindow.YangyangWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="106" Width="400"
        AllowsTransparency="True"
        Background="Transparent"
        BorderBrush="Transparent"
        BorderThickness="0"
        ResizeMode="NoResize"
        WindowStyle="None"
        Cursor="Hand"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    <Grid Margin="10">
        <Rectangle Fill="Orange"  HorizontalAlignment="Left" Stroke="Orange" VerticalAlignment="Top" Height="86" Width="380" >
            <Rectangle.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="Orange"/>
            </Rectangle.Effect>
        </Rectangle>
        <Border BorderBrush="Orange" BorderThickness="0.5">
            <Grid Background="#202020" Margin="1">
                <Image x:Name="shadow" HorizontalAlignment="Left" Margin="2,2,0,0"  Stretch="None"/>
                <Image x:Name="fujixerox" HorizontalAlignment="Left" Stretch="None"/>
                <Image x:Name="yangyang" Stretch="None" HorizontalAlignment="Left" Width="100" Margin="270,-5,0,5"/>
            </Grid>
        </Border>
    </Grid>
</Window>
